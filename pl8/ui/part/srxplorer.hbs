<nav id="explorer">

  <div id="filters">{{#with r.vd}}
    <p><input id="stack_off" name="stack" type="radio" val="message" onchange="ag.srcs.toggleStack()" /> <label for="stack_off"> total </label>
       <span><var id="v_shown">{{agg.src}}</var> /{{agg.src}}</span></p>
    <p><input id="stack_thread" name="stack" type="radio" val="thread" onchange="ag.srcs.toggleStack()" /> <label for="stack_thread"> threads </label>
       <span><var id="v_threads">{{agg.thread}}</var> /{{agg.thread}}</span>
    </p>

    <hr />
    <ul>{{#each filters}}
        <li><input type='checkbox' name='fltr' onchange='fTog(this)' id='f_{{this}}' /> <label for='f_{{this}}'>{{this}}</label></li>{{/each}}</ul>

    <hr />
    <h6><input type="checkbox" onchange="ag.srcs.toggleOrder()" checked="checked" />
        {{ui.order}} <span><var id="v_days">{{time.days}}</var> days</span></h6>
    <p>from <span><var id="v_from">{{ dayIso time.first}}</var></span></p>
    <p>to <span><var id="v_to">{{ dayIso time.last}}</var></span></p>
    <hr />{{/with}}
  </div>

  <ul>{{#each r.sources}}
    <li>{{!-- <a class='ico rm' href='/api/sources/{{_id}}' target='_blank'></a> --}}
        <span>{{ day published }}</span>
        <a onclick="cpv('{{name}}')" href="#{{name}}" class="subject">{{title}}</a>
      </li>{{/each}}
  </ul>

  <textarea id="cpd"></textarea>

</nav>
